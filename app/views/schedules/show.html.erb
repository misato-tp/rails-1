<div>
  <ul>
    <li><%= link_to "← 一覧に戻る", :schedules %></li>
  </ul>
</div>

<h3><%= @schedule.title %></h3>
<table>
  <tr>
    <th>開始日</th>
    <td><%= l @schedule.start %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= l @schedule.end %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @schedule.all_day ? '○' :''%></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.memo %></td>
  </tr>
</table>